<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100">

            <ImageView
                android:id="@+id/articleImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/default_image"
                android:transitionName="image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/author"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/author"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:transitionName="authorContainer">

                    <TextView
                        android:id="@+id/articleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/article_tile_caption" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/articleAuthEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="100"
                    android:transitionName="authorContainer">

                    <TextView
                        android:id="@+id/articleAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableStart="@drawable/ic_edit"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_weight="50"
                        android:tooltipText="Author"
                        android:transitionName="author" />

                    <TextView
                        android:id="@+id/articleEditor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:drawableStart="@drawable/ic_fountain_pen_close_up"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_weight="50"
                        android:tooltipText="Editor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:transitionName="authorContainer"
                android:weightSum="2">

                <TextView
                    android:id="@+id/articleCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/category"
                    android:drawableStart="@drawable/ic_list"
                    android:drawableLeft="@drawable/ic_list"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tooltipText="Category"
                    android:transitionName="author" />

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/articleDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/date_bg"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tooltipText="Date" />
            </LinearLayout>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/articleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="12dp"/>
        </LinearLayout>
    </ScrollView>

    <com.moraspirit.moraspiritapp.CustomBottomAppBar
        android:id="@+id/articleBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:transitionName="appBar"
        app:fabAlignmentMode="end"
        app:fabCradleRoundedCornerRadius="50dp"
        app:hideOnScroll="true"
        app:layout_scrollFlags="scroll|enterAlways" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/articleFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:srcCompat="@drawable/ic_share_white_24dp"
        android:tooltipText="Share"
        android:transitionName="fav"
        app:backgroundTint="@color/colorPrimaryDark"
        app:backgroundTintMode="src_in"
        app:layout_anchor="@id/articleBar"
        app:rippleColor="@color/ripple"
        app:tint="@color/iconColor" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


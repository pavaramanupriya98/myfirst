<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="100">
    <com.llollox.androidtoggleswitch.widgets.ToggleSwitch
        android:id="@+id/toggleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:textToggleLeft="UpComing"
        app:textToggleRight="Past"
        app:checkedBackgroundColor="@color/colorPrimary"
        app:uncheckedBackgroundColor="@color/inactiveColor"
        app:uncheckedTextColor="@color/colorPrimaryDark"
        app:separatorColor="@color/colorPrimaryDark"
        app:toggleWidth="120dp"
        android:textSize="13dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleSwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        >

       <FrameLayout
           android:id="@+id/frame"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
